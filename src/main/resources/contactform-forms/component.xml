      <component name="getForm">
         <file>getForm.xml</file>
         <description>Retrieves details of a specific form. </description>
      </component>
      <component name="listForms">
         <file>listForms.xml</file>
         <description>Retrieves details of forms.</description>
      </component>
      <component name="getFields">
         <file>getFields.xml</file>
         <description>Retrieves information about the fields of a certain form.</description>
      </component>
      <component name="getFormSubmissions">
         <file>getFormSubmissions.xml</file>
         <description>Retrieves details about the submissions of a certain form</description>
      </component>
      <component name="getFormSubmissionCount">
         <file>getFormSubmissionCount.xml</file>
         <description>Retrieves the submission count for a given form</description>
      </component>
   </subComponents>
</component>